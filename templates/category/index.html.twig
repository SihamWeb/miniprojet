{% extends 'base.html.twig' %}

{% block title %}Liste de nos catégories{% endblock %}

{% block body %}
    <h1 class="text-center mb-5 mt-3">{{'Toutes nos catégories'|upper}}</h1>

<div class="d-flex p-2 bd-highlight justify-content-center ">
    <table class="table table-sm table-striped table-hover mx-5 border rounded border-dark border-5 w-50 p-10">
        <thead class="table-dark">
            <tr>
                <th>Identifiant</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody class="table-primary">
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                    <a class="btn btn-outline-secondary" href="{{ path('category_show', {'id': category.id}) }}">Voir</a>
                    <a class="btn btn-dark" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune catégorie trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
<div class="d-flex p-2 bd-highlight justify-content-center">
    <a class="btn btn-primary mt-3 mb-5" href="{{ path('category_new') }}">Créer une nouvelle catégorie</a>
</div>
{% endblock %}
