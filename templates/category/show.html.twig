<div class="d-flex p-2 bd-highlight justify-content-center">
    <table class="table table-sm table-striped table-hover mx-5 border rounded border-dark border-5">
        <tbody>
            <tr class="table-primary">
                <th>Identifiant</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr class="table-primary">
                <th>Nom</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="d-flex p-2 bd-highlight justify-content-center">
    <a class="btn btn-dark" href="{{ path('category_edit', {'id': category.id}) }}">Modifier</a>
</div>
