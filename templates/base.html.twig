<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('assets/css/bootstrap.min.css') }}" rel="stylesheet" />
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>
        {% endblock %}
    </head>

    {% block header %}

        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark d-flex p-2 bd-highlight justify-content-center">
                <div class="dropdown me-2">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Catégories
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" href="{{ path('category_index') }}">Toutes nos catégories</a></li>
                        <li><a class="dropdown-item" href="{{ path('category_new') }}">Ajouter une catégorie</a></li>
                    </ul>
                </div>
                <div class="dropdown ms-2">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                        Articles
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a class="dropdown-item" href="{{ path('article_index') }}">Tous nos articles</a></li>
                        <li><a class="dropdown-item" href="{{ path('article_new') }}">Ajouter un article</a></li>
                    </ul>
                </div>
            </nav>
        </header>

    {% endblock %}
    
    {% block body %}
        <body>

        </body>
    {% endblock %}

    {% block footer %}

        <footer class="bg-dark text-center text-lg-start text-light position-absolute w-100 p-3 bottom-0">
            <div class="text-center p-3 ">
                © 2023 Tous droits réservés
                <p>Siham CHAREF</p>
            </div>
        </footer>
    
    {% endblock %}

</html>
